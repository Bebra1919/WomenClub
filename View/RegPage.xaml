<Page x:Class="WomenClub.View.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WomenClub.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Регистрация"
               Foreground="{StaticResource TextColor}"
               HorizontalAlignment="Center"
               FontSize="18px"/>
            <TextBox Width="300px"
               Height="30px"
               Margin="0 20px 0 0"/>
            <TextBox Width="300px"
                Height="30px"
                Margin="0 20px 0 0"/>
            <TextBox Width="300px"
                Height="30px"
                Margin="0 20px 0 0"/>
            <PasswordBox Width="300px"
                Height="30px"
                Margin="0 20px 0 0"/>
            <Button Width="200px"
                Height="40px"
                Margin="0 30px 0 0 "
            Content="Зарегистироваться"
                 Cursor="Hand"
                Background="{StaticResource SecondaryColor}"
                Foreground="{StaticResource PrimaryColor}" 
                    Click="RegButton_Click"/>
            <TextBlock Text="Вернуться назад"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource ElementsColor}"
                   Margin="0 30px 0 0" Cursor="Hand" MouseDown="GoBackTextClick"/>
        </StackPanel>
    </Grid>
</Page>
