<Page x:Class="WomenClub.View.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WomenClub.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Aвторизация"
                       Foreground="{StaticResource TextColor}"
                       HorizontalAlignment="Center"
                       FontSize="18px"/>
            <TextBox 
                VerticalAlignment="Center"
FontSize="16px"
                Width="300px"
                                Height="30px"
                                Margin="0 20px 0 0"/>
                <TextBox  
                    VerticalAlignment="Center"
                    FontSize="16px"
                    Width="300px"
         Height="30px"
         Margin="0 20px 0 0"/>
                <Button Width="200px"
                        Height="40px"
                        Margin="0 30px 0 0 "
                    Content="Войти"
                         Cursor="Hand"
                        Background="{StaticResource SecondaryColor}"
                        Foreground="{StaticResource PrimaryColor}" Click="LoginButton_Click"/>
            <TextBlock Text="Зарегистрироваться"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource ElementsColor}"
                           Margin="0 30px 0 0" Cursor="Hand" MouseDown="RegTextClick"/>
        </StackPanel>


    </Grid>
</Page>
