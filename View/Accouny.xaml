<Page x:Class="WomenClub.View.Accouny"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WomenClub.View"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Accouny">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Аккаунт"
           Foreground="{StaticResource PrimaryColor}"
           FontSize="72px"
           HorizontalAlignment="Center"
                   
                   />
        <StackPanel Grid.Row="1">


            <TextBlock x:Name="NameTextBlock" Text="Информация об Аккаунте:"
                       Foreground="{StaticResource PrimaryColor}"
                       FontSize="56px"
                       Margin=" 30px 0 0 50px"    
           />
            <TextBlock x:Name="IdTextBlock" Text="Вася пупкин"
                        Foreground="{StaticResource PrimaryColor}"
                        FontSize="38px"
                        Margin=" 30px 0 0 0"    
        />
            
            
        </StackPanel>


        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button 
    Content="Изменитть данные аккаунта "
    Width="400"
    Height="60"
    FontSize="24px"
    Background="{StaticResource PrimaryColor}"
    Foreground="{StaticResource TextColor}"
    FontWeight="Bold"
    Margin="0 0 30px 0"
    >
           </Button>
            
            
            <Button 
    Content="Удалить аккаунт "
    Width="400"
    Height="60"
    FontSize="24px"
    Background="{StaticResource SecondaryColor}"
    Foreground="{StaticResource TextColor}"
    FontWeight="Bold"
    Margin="0 0 30px 0"
    >

            </Button>
        </StackPanel>
        
    </Grid>
</Page>
