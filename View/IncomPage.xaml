<Page x:Class="WomenClub.View.IncomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WomenClub.View"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="IncomPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Доходы"
                Foreground="{StaticResource ElementsColor}"
                FontSize="36px"
                HorizontalAlignment="Center"
                />
        
        <TextBlock Text="0.0 Рублей"
                Grid.Column="1"
                Foreground="{StaticResource ElementsColor}"
                FontSize="36px"
                HorizontalAlignment="Center"
                />
        
        

        <StackPanel Grid.Row="1"
                 Grid.Column="1"
                 VerticalAlignment="Center"
                 >
            <Button Content="Создать счёт"
            Width="200px"
            Height="30px"
            Background="{StaticResource ElementsColor}"
            Foreground="{StaticResource SecondaryColor}"
            FontSize="14px"
            FontWeight="Bold"
            Margin="0px 30px 0 0"
            Cursor="Hand"/>
            <Button Content="Добавить доход"
    Width="200px"
    Height="30px"
    Background="{StaticResource ElementsColor}"
    Foreground="{StaticResource SecondaryColor}"
    FontSize="14px"
    FontWeight="Bold"
   Margin="0px 30px 0 0"
            
           Cursor="Hand"/>

            <Button Content="Добавить расход"
Width="200px"
Height="30px"
Background="{StaticResource ElementsColor}"
Foreground="{StaticResource SecondaryColor}"
FontSize="14px"
FontWeight="Bold"
Margin="0px 30px 0 0"
            Cursor="Hand"/>


        </StackPanel>
    </Grid>
</Page>
